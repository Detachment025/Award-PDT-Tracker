{
  "name": "pdt_and_awards_tracker",
  "version": "1.0.0",
  "author": "Benjamin Joseph Lucero Herrera",
  "license": "MIT",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next export",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron:start\"",
    "electron:start": "wait-on http://127.0.0.1:3000 && electron .",
    "electron:build": "electron-builder",
    "forge:start": "electron-forge start",
    "forge:package": "electron-forge package",
    "forge:make": "electron-forge make"
  },
  "dependencies": {
    "@electron-forge/cli": "^6.1.1",
    "@electron-forge/maker-deb": "^6.1.1",
    "@electron-forge/maker-rpm": "^6.1.1",
    "@electron-forge/maker-squirrel": "^6.1.1",
    "@electron-forge/maker-zip": "^6.1.1",
    "autoprefixer": "10.4.14",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "js-cookie": "^3.0.5",
    "moment": "^2.29.4",
    "next": "13.4.1",
    "postcss": "8.4.23",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.8.0",
    "react-input-autosize": "^3.0.0",
    "react-toastify": "^9.1.2",
    "tailwindcss": "3.3.2",
    "wait-on": "^7.0.1"
  },
  "devDependencies": {
    "electron": "^24.2.0",
    "electron-builder": "^24.4.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "pdt_and_awards_tracker"
          }
        }
      ]
    }
  },
  "build": {
    "appId": "com.benjaminherrera.pdt_and_awards_tracker",
    "productName": "PDTs and Awards Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      ".next/**/*",
      "src/**/*",
      "data/**/*",
      "node_modules/**/*",
      "package.json",
      "main.js"
    ],
    "extraResources": [
      "./data/data.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
